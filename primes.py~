# Trying to generate prime numbers..........
# With a python script.
#
# :)


INIT = 1 # The first prime

def is_prime(number):

    ''' Trying
    to check if the number is a prime
    '''


    if number == 0:
        return "Number 0, not prime"

    if number == 1:
        return "Number 1, first prime"

    if number == 2:
        return "Not prime, number 2"

  
       
    c = 1
    flag = True
    while c < number:

        if (number % c) not 0:
            c += 1
            continue

        if (number % c) == 0:
            flag = False
            break



    return flag





for x in range(100):

    print("Broj: " + x + ":" + is_prime(x) + "prime number")
        
